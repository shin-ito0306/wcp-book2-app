<%= flash[:notice] %>
<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name %>

  <%= f.label :Image %>
  <%= f.attachment_field :profile_image %>

  <%= f.label :Introduction %>
  <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>
<% end %>