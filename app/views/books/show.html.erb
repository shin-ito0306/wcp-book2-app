<div class="container">
    <div class="row">
        <%= render 'users/sidebar', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book_show.user.id) do %>
                                <%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %><br>
                                <%= @book_show.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book_show.id) do %>
                                <%= @book_show.title %>
                            <% end %>
                        </td>
                        <td><%= @book_show.body %></td>
                        <% if @book_show.favorited_by?(current_user) %>
                            <td>
                              <%= link_to book_favorites_path(@book_show.id), method: :delete do %>
                                ❤️<%= @book_show.favorites.count %>
                              <% end %>
                            </td>
                        <% else %>
                            <td>
                              <%= link_to book_favorites_path(@book_show.id), method: :post do %>
                                ♡<%= @book_show.favorites.count %>
                              <% end %>
                            </td>
                        <% end %>
                        <% if @book_show.user_id == current_user.id %>
                            <td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-sm btn-success" %></td>
                            <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: { confirm: "本当に削除しますか。" }, class: "btn btn-sm btn-danger" %></td>
                        <% end %>
                        <td>コメント数：<%= @book_show.book_comments.count %></td>
                    </tr>
                </tbody>
            </table>
            <% @book_show.book_comments.each do |book_comment| %>
                <div>
                    <%= link_to user_path(book_comment.user.id) do %>
                    <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %><br>
                    <%= book_comment.user.name %>
                    <% end %>
                    <%= book_comment.comment %>
                    <% if book_comment.user_id == current_user.id %>
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, class: "btn btn-danger btn-sm" %><br>
                    <% end %>
                </div>
            <% end %>
            <%= form_with(model:[@book_show, @book_comment], local:true) do |f| %>
                <%= f.text_area :comment, class: "col-12 mt-3" %>
                <%= f.submit "送信" %>
            <% end %>
        </div>
    </div>
</div>











