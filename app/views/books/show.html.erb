<div class="container">
    <div class="row">
        <%= render 'users/sidebar', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book_show.user.id) do %>
                                <%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %><br>
                                <%= @book_show.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book_show.id) do %>
                                <%= @book_show.title %>
                            <% end %>
                        </td>
                        <td><%= @book_show.body %></td>
                        <td id="favorite-button-<%= @book_show.id %>">
                            <%= render 'favorites/favorite', book: @book_show  %>
                          </td>
                        <% if @book_show.user_id == current_user.id %>
                            <td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-sm btn-success" %></td>
                            <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: { confirm: "本当に削除しますか。" }, class: "btn btn-sm btn-danger" %></td>
                        <% end %>
                        <td>コメント数：<%= @book_show.book_comments.count %></td>
                        <td>閲覧数：<%= @book_show.impressionist_count %></td>
                    </tr>
                </tbody>
            </table>
            <div id="book_comment">
                <%= render "books/comment", book: @book_show, comment: @book_comment %>
            </div>
        </div>
    </div>
</div>











