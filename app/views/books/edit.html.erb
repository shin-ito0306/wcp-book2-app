<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <p><%= @book.errors.full_messages.count %>件のerror</p>
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :opinion %>
  <%= f.text_area :body %>

  <%= f.submit "Update Book"%>
<% end %>
<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>