<h3><%= link_to "ユーザー一覧に戻る", users_path %></h3>
<h2><%= @user.name %>さんとのチャット</h2>
<div class="col-md-3">
  <% if @messages.present? %>
    <% @messages.each do |message| %>
      <% if message.room.user_id == current_user.id %>
        <div class="current_user_message">
          <%= message %>
        </div>
      <% else %>
        <div class="you_message">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
