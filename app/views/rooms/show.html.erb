<h3><%= link_to "ユーザー一覧に戻る", users_path %></h3>
<h2><%= @user.name %>さんとのチャット</h2>
  <div class="col-md-3">
  <% if @messages.present? %>
    <% @messages.each do |message| %>
      <% if message.room.user_id == current_user.id %>
        <div class="message">
         <p style="text-align: left;"><%= message.text %></p>
        </div>
      <% else %>
        <div class="message-you">
          <p style="text-align: right;"><%= message.text %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
   <%= form_with model:@message do |f| %>
    <%= f.text_field :text %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit "送信", class:"btn btn-success" %>
  <% end %>
</div>
